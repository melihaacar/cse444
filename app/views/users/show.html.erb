<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %> 
        <%= @user.name %>
      </h1>
	  <h2><%= @user.email %></h2>
    </section>
	<section>
		<% if current_user?(@user) %>
			<%= link_to "New Advert", new_user_advert_path(@user) %>
		<% end %>
	</section>
  </aside>
  <div class="span8">
	<h3>My Adverts (<%= @user.adverts.count %>)</h3>
	<% if @user.adverts.any? %>
	<ol class="adverts">
		<%= render @adverts %>
	</ol>
	<% end %>
  </div>
</div>